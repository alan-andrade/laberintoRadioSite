# custom
$ ->
  laberintoChat = new Laberinto.ChatRoom()

  $('form').submit (e) ->
    e.preventDefault()
    nickname  = 'alan'
    input     = $('input#message_box')
    content   = input.val()
    return if content is ''
    toSend = new Laberinto.Message({nickname: nickname, message: content})
    laberintoChat.appendMessage(toSend)
    input.val('')
    false
