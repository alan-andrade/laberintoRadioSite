.presenter
  .alert.alert-info
    = link_to 'Nuevo Programa', new_user_program_path(@user)
    |
    = link_to 'Actualizar Perfil', edit_user_path(@user)
    |
    = link_to 'Salir', logout_path
  .clearfix

  .header
    .picture
      = image_tag @user.profile.avatar.url(:medium)
    .credentials
      %h1.name= @user.name
      .title Ingeniero en audio
      .social-networks
        - if @user.profile.twitter.present?
          = link_to @user.profile.twitter_url, target: '_blank' do
            = image_tag('http://icons.iconarchive.com/icons/danleech/simple/48/twitter-icon.png')
        - if @user.profile.facebook.present?
          = link_to @user.profile.facebook_url, target: '_blank' do
            = image_tag('http://icons.iconarchive.com/icons/danleech/simple/48/facebook-icon.png')

  .row
    .body.span6
      .programs
        = render @programs
    .bio.span4
      %h2 Biografia
      :markdown
        #{@user.bio.body}
    .span2
      %h1 sponsor
