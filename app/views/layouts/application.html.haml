!!! 5

%html{lang: 'en'}
  %head
    %meta{charset: 'utf8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title Laberinto Radio, cambiando a Mexico
    = stylesheet_link_tag 'base', media: 'all'
    = yield :js
    = csrf_meta_tags
    = google_analytics
  %body
    .wrapper
      %header.top-header
        = image_tag 'laberinto-header.png', class: :logo
      %nav.left-nav
        %ul.menu
          %li= link_to 'Inicio', root_path
          %li= link_to 'Programas', programacion_path
          %ul.social-networks
            %li= link_to image_tag('http://icons.iconarchive.com/icons/danleech/simple/32/twitter-icon.png'), 'http://www.twitter.com/laberinto_radio'
            %li= link_to image_tag('http://icons.iconarchive.com/icons/danleech/simple/32/facebook-icon.png'), 'http://www.facebook.com/laberintoradiomexico'

      .content
        =yield
