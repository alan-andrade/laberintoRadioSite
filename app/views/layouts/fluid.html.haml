!!! 5

%html{lang: 'en'}
  %head
    %meta{charset: 'utf8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title Laberinto Radio : double split
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = yield :js
    = csrf_meta_tags

  %body
    %nav.navbar.navbar-fixed-top
      .navbar-inner
        .container
          %ul.nav
            %li
              = link_to index_path do
                %i.icon-home.icon-white
                Inicio
            %li
              = link_to chat_path do
                %i.icon-signal.icon-white
                Transmision
            %li
              = link_to programacion_path do
                %i.icon-calendar.icon-white
                Programacion
            %li
              %a{href: pending_path}
                %i.icon-user.icon-white
                Quienes Somos
            %li
              %a{href: pending_path}
                %i.icon-briefcase.icon-white
                Ambiente de trabajo
            %li
              %a{href: pending_path}
                %i.icon-bullhorn.icon-white
                Anunciate
          %ul.nav.pull-right
            %li
              %a.brand
                Laberinto Radio
    .container{style:'margin-top: 60px;'}
      = yield
