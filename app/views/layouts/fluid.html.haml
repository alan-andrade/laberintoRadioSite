!!! 5

%html{lang: 'en'}
  %head
    %meta{charset: 'utf8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title Laberinto Radio, cambiando a Mexico
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = yield :js
    = csrf_meta_tags
    :javascript
      var _gauges = _gauges || [];
      (function() {
        var t   = document.createElement('script');
        t.type  = 'text/javascript';
        t.async = true;
        t.id    = 'gauges-tracker';
        t.setAttribute('data-site-id', '4fe40516613f5d37ec000036');
        t.src = '//secure.gaug.es/track.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(t, s);
      })();

  %body
    %nav.navbar.navbar-fixed-top
      .navbar-inner
        .container
          %ul.nav
            %li
              = link_to index_path do
                %i.icon-home.icon-white
                Inicio
            %li
              = link_to chat_path do
                %i.icon-signal.icon-white
                Transmision
            %li
              = link_to programacion_path do
                %i.icon-calendar.icon-white
                Programacion
            %li
              %a{href: pending_path}
                %i.icon-user.icon-white
                Quienes Somos
            %li
              %a{href: pending_path}
                %i.icon-briefcase.icon-white
                Ambiente de trabajo
            %li
              %a{href: pending_path}
                %i.icon-bullhorn.icon-white
                Anunciate
          %ul.nav.pull-right
            %li
              %a.brand
                Laberinto Radio
    .container{style:'margin-top: 60px;'}
      = yield
